<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/degreeShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bsc"
                android:fontFamily="@font/lexenddeca"
                android:textSize="10dp"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/lexenddeca"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/instituteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUET"
                android:textColor="@color/black"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/lexenddeca"
                android:textSize="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:fontFamily="@font/lexenddeca"
                android:textSize="10dp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/fromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1990-12-12"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/lexenddeca"
                android:textSize="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                android:textColor="@color/black"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/lexenddeca"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/toDateShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1994-12-12"
                android:layout_marginLeft="2dp"
                android:fontFamily="@font/lexenddeca"
                android:textSize="10dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexenddeca"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdasdasdasdasdasdasdasdasdasdasdasdasdasdasd"
                android:textSize="10sp"
                android:fontFamily="@font/lexenddeca"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activities"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lexenddeca"/>
            <TextView
                android:id="@+id/activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdasdasdasdasdasdasdasdasdasdasdasdasdasdasd"
                android:textSize="10sp"
                android:fontFamily="@font/lexenddeca"/>
        </LinearLayout>







    </LinearLayout>


</LinearLayout>