<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--<ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="147dp"
                    android:layout_height="67dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/logo" />-->
                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/topview">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="Expert Listing"
                        android:textSize="20sp"
                        android:fontFamily="@font/lexenddeca"
                        android:textStyle="bold"/>
                </LinearLayout>-->


                <TextView
                    android:id="@+id/jobTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"

                    android:text="Job"
                    android:fontFamily="@font/lexenddeca"
                    android:textColor="@color/colorRed"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/expertTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:text="Expert"
                    android:fontFamily="@font/lexenddeca"
                    android:textSize="16dp"
                    app:layout_constraintStart_toEndOf="@+id/jobTextView"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/trainningTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/lexenddeca"
                    android:text="Training"
                    android:textSize="16dp"
                    app:layout_constraintStart_toEndOf="@+id/expertTextView"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/trainningTextView"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/createJob"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:fontFamily="@font/lexenddeca"
                        android:text="+Create Job"
                        android:textColor="@color/white"
                        android:background="@drawable/ic_main_button"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:textSize="10dp" />
                </LinearLayout>



                <androidx.cardview.widget.CardView
                    android:id="@+id/searchViews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="13dp"
                    app:layout_constraintTop_toBottomOf="@+id/trainningTextView"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <SearchView
                            android:id="@+id/searchView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:searchIcon="@drawable/ic_search_icon"
                            android:background="#F8F8F8" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:id="@+id/recyclerViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/searchViews">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/jobAdapterRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/searchView" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/expertAdapterRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/searchView" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/trainningAdapterRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/searchView" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="9dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerViewLayout">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:layout_gravity="center"
                        android:layout_margin="7dp"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Business Connected"
                                android:paddingLeft="10dp"
                                android:drawablePadding="10dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:fontFamily="@font/lexenddeca"
                                android:drawableLeft="@drawable/ic_business_logo"
                                android:textSize="16dp"/>
                            <TextView
                                android:id="@+id/businessConnected"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="364"
                                android:fontFamily="@font/lexenddeca"
                                android:textColor="@color/colorRed"
                                android:gravity="end|center"

                                android:paddingRight="10dp"
                                android:layout_gravity="end|center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_margin="7dp"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_expert_logo"
                                android:drawablePadding="10dp"
                                android:paddingLeft="10dp"
                                android:gravity="center"
                                android:fontFamily="@font/lexenddeca"
                                android:text="Experts Connected"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/expertConnected"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="364"
                                android:textColor="@color/colorRed"
                                android:gravity="end"
                                android:fontFamily="@font/lexenddeca"
                                android:paddingRight="10dp"
                                android:layout_gravity="end"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_margin="7dp"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trainning Connected"
                                android:paddingLeft="10dp"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:fontFamily="@font/lexenddeca"
                                android:drawableLeft="@drawable/ic_training_logo"
                                android:textSize="16dp"/>
                            <TextView
                                android:id="@+id/trainningConnected"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="364"
                                android:fontFamily="@font/lexenddeca"
                                android:textColor="@color/colorRed"
                                android:gravity="end"
                                android:paddingRight="10dp"
                                android:layout_gravity="end"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_margin="7dp"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jobs Posted"
                                android:paddingLeft="10dp"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:fontFamily="@font/lexenddeca"
                                android:drawableLeft="@drawable/ic_jobs_logo"
                                android:textSize="16dp"/>
                            <TextView
                                android:id="@+id/jobPosted"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="364"
                                android:fontFamily="@font/lexenddeca"
                                android:textColor="@color/colorRed"
                                android:gravity="end"
                                android:paddingRight="10dp"
                                android:layout_gravity="end"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_margin="7dp"
                        android:layout_marginBottom="4dp"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jobs Connected"
                                android:paddingLeft="10dp"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:fontFamily="@font/lexenddeca"
                                android:drawableLeft="@drawable/ic_jobs_connected_logo"
                                android:textSize="16dp"/>
                            <TextView
                                android:id="@+id/jobConnected"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="364"
                                android:fontFamily="@font/lexenddeca"
                                android:textColor="@color/colorRed"
                                android:gravity="end"
                                android:paddingRight="10dp"
                                android:layout_gravity="end"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <TextView
                    android:id="@+id/choiceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="226dp"
                    android:text="Choice is your own"
                    android:textSize="20sp"
                    android:fontFamily="@font/lexenddeca"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linear3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="14dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/choiceText">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:id="@+id/hire_Button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/ic_hire_button" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Want to hire?"
                                android:fontFamily="@font/lexenddeca"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textSize="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30% rate quick hiring"
                                android:fontFamily="@font/lexenddeca"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="8dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:id="@+id/work_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/ic_work_button" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Want to work?"
                                android:fontFamily="@font/lexenddeca"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textSize="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30% rate quick hiring"
                                android:fontFamily="@font/lexenddeca"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="8dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:id="@+id/training_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/ic_training_button" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Training program?"
                                android:fontFamily="@font/lexenddeca"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textAlignment="center"
                                android:textSize="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30% rate quick hiring"
                                android:fontFamily="@font/lexenddeca"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="8dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include
            layout="@layout/main_nav_drawer"/>
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>