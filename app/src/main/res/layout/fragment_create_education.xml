<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.DashboardFragement.ExpertDashboard.CreateEducationFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linear12"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ic_topview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Toolbar
                android:id="@+id/toolbarId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lexenddeca"
                    android:gravity="center"
                    android:text="Create Education"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </Toolbar>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linear12">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/linear12">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Institute *"
                        android:fontFamily="@font/lexenddeca"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/instituteEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="12sp"
                        android:hint=""
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/lexenddeca"
                        android:textColor="@color/black"
                        android:background="@drawable/ic_text_box"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Degree *"
                        android:fontFamily="@font/lexenddeca"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/degreeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="12sp"
                        android:hint=""
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/lexenddeca"
                        android:textColor="@color/black"
                        android:background="@drawable/ic_text_box"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Field of Study *"
                        android:fontFamily="@font/lexenddeca"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/fieldStudyEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="12sp"
                        android:hint=""
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/lexenddeca"
                        android:textColor="@color/black"
                        android:background="@drawable/ic_text_box"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Year *"
                        android:fontFamily="@font/lexenddeca"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/startYearTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="12sp"
                        android:drawableRight="@drawable/ic_baseline_date_range_24"
                        android:hint="mm/dd/yy"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:textAlignment="viewStart"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/lexenddeca"
                        android:textColor="@color/black"
                        android:background="@drawable/ic_text_box"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End/Expected Year *"
                        android:fontFamily="@font/lexenddeca"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/endYearTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="12sp"
                        android:drawableRight="@drawable/ic_baseline_date_range_24"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginTop="5dp"
                        android:hint="mm/dd/yy"
                        android:gravity="center"
                        android:textAlignment="viewStart"
                        android:fontFamily="@font/lexenddeca"
                        android:textColor="@color/black"
                        android:background="@drawable/ic_text_box"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grade *"
                        android:fontFamily="@font/lexenddeca"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/gradeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="12sp"
                        android:hint=""
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/lexenddeca"
                        android:textColor="@color/black"
                        android:background="@drawable/ic_text_box"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tell us details *"
                        android:fontFamily="@font/lexenddeca"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/detailsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:textSize="12sp"
                        android:hint="Details"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/lexenddeca"
                        android:textColor="@color/black"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:background="@drawable/ic_text_box"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activities *"
                        android:fontFamily="@font/lexenddeca"
                        android:textSize="10sp"
                        android:textColor="@color/black"/>
                    <EditText
                        android:id="@+id/activitiesEditText"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:textSize="12sp"
                        android:hint="Describe your Activities"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/lexenddeca"
                        android:textColor="@color/black"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:background="@drawable/ic_text_box"/>

                </LinearLayout>
                <Button
                    android:id="@+id/createButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:text="Create"
                    android:fontFamily="@font/lexenddeca"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/ic_main_button"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>